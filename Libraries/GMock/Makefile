#-------------------------------------------------------------------------------
# @file         Makefile
# @copyright    (c) 2015 - Jean-David Gadina - www.xs-labs.com
# @abstract     GMock makefile for POSIX platforms
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# Path to directories
#-------------------------------------------------------------------------------

DIR_BUILD                       = ./build/
DIR_SRC                         = ./source/
DIR_TMP                         = ./tmp/
DIR_TMP_BUILD                   = $(DIR_TMP)build/

#-------------------------------------------------------------------------------
# Software versions
#-------------------------------------------------------------------------------

VERSION_GMOCK                   = 1.7.0

#-------------------------------------------------------------------------------
# Source paths
#-------------------------------------------------------------------------------

SRC_GMOCK                       = $(DIR_SRC)gmock-$(VERSION_GMOCK).zip
SRC_GMOCK_DIR                   = $(DIR_TMP)gmock-$(VERSION_GMOCK)/

#-------------------------------------------------------------------------------
# Targets
#-------------------------------------------------------------------------------

# Phony targets
.PHONY: clean all gmock_unpack gmock_build

# Complete build
all: gmock_unpack gmock_build

# Clean-up
clean:
	@echo "    *** Cleaning all build files"
	@rm -rf $(DIR_BUILD)lib/osx/*
	
# GMock source un-archiving
gmock_unpack:
	@echo "    *** Unpacking GMock ($(VERSION_GMOCK))"
	@if [ ! -d $(SRC_GMOCK_DIR) ]; then unzip $(SRC_GMOCK) -d $(DIR_TMP); fi

# GMock libraries build
gmock_build:
	@echo "    *** Building GMock ($(VERSION_GMOCK))"
	@cd $(DIR_TMP_BUILD) && cmake ../../$(SRC_GMOCK_DIR) && make
	@cp $(DIR_TMP_BUILD)libgmock.a $(DIR_BUILD)lib/osx
	@cp $(DIR_TMP_BUILD)libgmock_main.a $(DIR_BUILD)lib/osx
	@cp $(DIR_TMP_BUILD)gtest/libgtest_main.a $(DIR_BUILD)lib/osx
	@cp $(DIR_TMP_BUILD)gtest/libgtest.a $(DIR_BUILD)lib/osx
	@cp -rf $(SRC_GMOCK_DIR)include/gmock $(DIR_BUILD)include/
	@cp -rf $(SRC_GMOCK_DIR)gtest/include/gtest $(DIR_BUILD)include/
